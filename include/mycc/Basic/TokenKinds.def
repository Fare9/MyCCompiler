// just put the token
#ifndef TOK
#define TOK(ID)
#endif
// in case TOK is defined, just
// expand the ID
#ifndef PUNCTUATOR
#define PUNCTUATOR(ID, SP) TOK(ID)
#endif
// in case TOK is defined, expand
// the ID as kw_ID
#ifndef KEYWORD
#define KEYWORD(ID, FLAG) TOK(kw_##ID)
#endif

// These define members of the tok::* namespace.

TOK(unknown)            // Not a token.
TOK(eof)                // End of file.
TOK(identifier)         // abcde123
TOK(integer_literal)    // 123, 0x123, 0123

/// punctuators, part of the statements
PUNCTUATOR(plus, "+")
PUNCTUATOR(minus, "-")
PUNCTUATOR(star, "*")
PUNCTUATOR(slash, "/")
PUNCTUATOR(percent, "%")        // Added modulo operator
PUNCTUATOR(period, ".")
PUNCTUATOR(comma, ",")
PUNCTUATOR(semi, ";")
PUNCTUATOR(colon, ":")
PUNCTUATOR(caret, "^")
PUNCTUATOR(equal, "=")
PUNCTUATOR(equalequal, "==")    // Added equality comparison
PUNCTUATOR(exclaimequal, "!=")  // Added inequality comparison
PUNCTUATOR(hash, "#")
PUNCTUATOR(less, "<")
PUNCTUATOR(greater, ">")
PUNCTUATOR(lessequal, "<=")
PUNCTUATOR(greaterequal, ">=")
PUNCTUATOR(lessless, "<<")      // Added left shift
PUNCTUATOR(greatergreater, ">>") // Added right shift
PUNCTUATOR(ampamp, "&&")        // Added logical AND
PUNCTUATOR(pipepipe, "||")      // Added logical OR
PUNCTUATOR(exclaim, "!")        // Added logical NOT
PUNCTUATOR(amp, "&")            // Added bitwise AND / address-of
PUNCTUATOR(pipe, "|")           // Added bitwise OR
PUNCTUATOR(l_paren, "(")
PUNCTUATOR(r_paren, ")")
PUNCTUATOR(l_square, "[")
PUNCTUATOR(r_square, "]")
PUNCTUATOR(l_brace, "{")        // Added braces
PUNCTUATOR(r_brace, "}")
PUNCTUATOR(tilde, "~")          // Added ~ for complement operator
PUNCTUATOR(decrement, "--")     // Added decrement operator
PUNCTUATOR(increment, "++")     // Added increment operator
// Compound statements
PUNCTUATOR(compoundadd, "+=")
PUNCTUATOR(compoundsub, "-=")
PUNCTUATOR(compoundmul, "*=")
PUNCTUATOR(compounddiv, "/=")
PUNCTUATOR(compoundrem, "%=")
PUNCTUATOR(compoundand, "&=")
PUNCTUATOR(compoundor, "|=")
PUNCTUATOR(compoundxor, "^=")
PUNCTUATOR(compoundshl, "<<=")
PUNCTUATOR(compoundshr, ">>=")
// Chapter 6
PUNCTUATOR(interrogation, "?")

/// keywords used during the program
KEYWORD(int, KEYALL)            // Fixed: should be lowercase 'int'
KEYWORD(char, KEYALL)           // Added char type
KEYWORD(void, KEYALL)           // Added void type
KEYWORD(if, KEYALL)             // Added control flow
KEYWORD(else, KEYALL)
KEYWORD(while, KEYALL)
KEYWORD(for, KEYALL)
KEYWORD(return, KEYALL)
KEYWORD(sizeof, KEYALL)         // Added sizeof operator
KEYWORD(goto, KEYALL)
KEYWORD(break, KEYALL)          // For loops in chapter 8
KEYWORD(continue, KEYALL)       // For loops in chapter 8
KEYWORD(do, KEYALL)             // For loops in Chapter 8

#undef KEYWORD
#undef PUNCTUATOR
#undef TOK