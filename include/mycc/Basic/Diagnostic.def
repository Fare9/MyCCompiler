#ifndef DIAG
#define DIAG(ID, Level, Msg)
#endif

DIAG(err_expected, Error, "expected {} but found {}")
DIAG(err_unexpected_token, Error, "unexpected character '{}' in source")
DIAG(err_invalid_suffix_integer, Error, "invalid suffix '{0}' on integer literal")

DIAG(err_duplicate_variable_declaration, Error, "variable '{}' has already been defined")
DIAG(err_var_used_before_declared, Error, "Variable '{}' used but not defined")
DIAG(err_incorrect_lvalue, Error, "Invalid lvalue used")
DIAG(err_existing_label, Error, "Error, the label {} already exists in the function")
DIAG(err_undefined_label, Error, "use of undeclared label '{}'")

DIAG(err_expected_statement_after_label, Error, "Error, expected a statement after a label, not a declaration")
DIAG(err_label_cannot_end_block, Error, "Error, label cannot be the last statement of a block")


#undef DIAG